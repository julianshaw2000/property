# ======================
# MaintainUK Environment Variables Template
# ======================
# Copy this file to .env and fill in your values
# NEVER commit .env to source control

# ======================
# Database (Neon Serverless Postgres)
# ======================
# Using Neon - connection string configured in appsettings.json
# No local Postgres needed
DATABASE_HOST=ep-square-king-abq0rqc5-pooler.eu-west-2.aws.neon.tech
DATABASE_PORT=5432
DATABASE_NAME=neondb
DATABASE_USER=neondb_owner
DATABASE_PASSWORD=CHANGE_ME_DATABASE_PASSWORD
DATABASE_SSL=true

# ======================
# Redis (Job Queue)
# ======================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_HOST=localhost
REDIS_PORT=6379

# ======================
# MinIO (S3-compatible Storage)
# ======================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=maintainuk-dev

# ======================
# JWT Authentication
# ======================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_ISSUER=https://api.maintainuk.com
JWT_AUDIENCE=https://app.maintainuk.com
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# ======================
# Email Provider (Resend/SendGrid)
# ======================
EMAIL_PROVIDER=Mock  # Mock, Resend, SendGrid
RESEND_API_KEY=CHANGE_ME_RESEND_API_KEY
SENDGRID_API_KEY=CHANGE_ME_SENDGRID_API_KEY
EMAIL_FROM_ADDRESS=noreply@maintainuk.com
EMAIL_FROM_NAME=MaintainUK

# ======================
# AI Provider (OpenAI)
# ======================
AI_PROVIDER=Mock  # Mock, OpenAI
OPENAI_API_KEY=CHANGE_ME_OPENAI_API_KEY
OPENAI_MODEL=gpt-4-turbo
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=2000

# ======================
# Twilio (SMS/WhatsApp) - Optional, feature-flagged
# ======================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=CHANGE_ME_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+447700900000
TWILIO_WHATSAPP_FROM=whatsapp:+447700900000

# ======================
# Stripe (Billing) - Optional, for Phase 8
# ======================
STRIPE_SECRET_KEY=CHANGE_ME_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=CHANGE_ME_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=CHANGE_ME_STRIPE_WEBHOOK_SECRET

# ======================
# Feature Flags
# ======================
FEATURE_SMS_ENABLED=false
FEATURE_WHATSAPP_ENABLED=false
FEATURE_AI_ENABLED=true

# ======================
# Application URLs
# ======================
API_URL=http://localhost:5000
WEB_URL=http://localhost:4200

# ======================
# Logging
# ======================
LOG_LEVEL=Debug  # Debug, Information, Warning, Error
LOG_TO_CONSOLE=true
LOG_TO_FILE=false

# ======================
# CORS (Development)
# ======================
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_GENERAL=100  # requests per minute
RATE_LIMIT_AUTH=10      # requests per minute
RATE_LIMIT_AI=20        # requests per minute per org

